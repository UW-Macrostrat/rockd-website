.map-page
  height 100vh
  width 100vw
  display flex
  flex-direction column
  position relative

.main-ui
  flex-grow 1
  position: relative

.panels-overlay
  position absolute
  top 20px
  left 20px
  right 20px
  bottom 30px
  z-index 100
  // Make sure we can still click
  // on map in background
  pointer-events none

.left-stack
  max-width 34em
  min-width 14em
  // height 100vh
  display: flex
  flex-direction: row
  &>div
    pointer-events: all
  .spacer
    flex-grow 1
    width 1px
    pointer-events: none
  &>:global(.closeable-card)
    flex-shrink 1
    display flex
    flex-direction: column
  .panel-container > *
    transition width 300ms


@media only screen and (max-width: 768px) {
  /* For mobile phones: */
  .panels-overlay{
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }
}
