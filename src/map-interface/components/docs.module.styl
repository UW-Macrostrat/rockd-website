:global
  video
    max-width: 50%
    float: left
    margin 0.5em 1em 1em 0
    border-radius: 6px
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.4)

  .text-panel
    margin 0em 0.5em
    h2, h3
      // Make sure headings clear floats (for videos)
      clear both
      display: inline-block
      width: 100%
      margin 1em 0 0.5em
    ul
      margin-top 0.2em

.new-swatch
  font-size 0.8em
  font-weight 400
  display inline-block
  padding: 0.25em 0.5em
  margin 0 0.5em
  border-radius: 4px
  font-style italic
  float right
  background-color: var(--ui-color-accent)
  color: var(--ui-color-accent-text)

.version
  .version-name
    display inline-block
    padding: 0.25em 0.5em
    margin-right 0.5em
    border-radius: 4px
    background-color: var(--ui-color-accent)
    color: var(--ui-color-accent-text)
    code
      font-size 0.9em
      font-weight: 400
  .date
    font-style italic