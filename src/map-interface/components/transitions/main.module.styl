.transition-item
  &:global(.enter)
    opacity: 0
  &:global(.enter-active)
    opacity: 1
    transition: opacity 0.5s ease-in-out !important
  &:global(.exit)
    opacity: 1
  &:global(.exit-active)
    opacity: 0
    transition: opacity 0.5s ease-in-out !important
  transition: height 0.5s

.transition-item.spinner
  position absolute
  top 0
  left 0
  width: 100%
  height 100%
  min-height: 80px
  background-color: rgba(255, 255, 255, 0.8)
  :global(.bp3-spinner)
    padding: 15px
  &:global(.enter)
    height: 0
    opacity: 0
  &:global(.enter-active)
    height: 80px
    opacity: 1
    transition: height 0.2s ease-in, opacity 0.2s ease-in !important
  &:global(.exit)
    height: 80px
    opacity: 1
  &:global(.exit-active)
    opacity: 0
    transition: height 0.3s ease-in, opacity 0.2s ease-in !important

