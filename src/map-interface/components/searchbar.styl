.search-results-card
  padding: 0
  overflow-y: scroll

.search-results
  padding: 0;
  overflow: hidden
  position: relative
  li
    cursor pointer
    &:hover
      background-color: var(--accent-hover-color)
  ul
    list-style none
    margin: 0 
    padding-left 0




.search-result-row
  border-bottom 1px solid #ddd
  padding 0.2em var(--box-horizontal-padding)


.search-results-container
  flex-shrink 1