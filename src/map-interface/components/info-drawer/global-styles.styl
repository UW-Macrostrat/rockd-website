.infodrawer-container
  width 30em
  position absolute
  right 0px
  top 20px
  height 88vh
  pointer-events none
  /* This doesn't quite work when
     the page is too tall */
  .infodrawer
    pointer-events all
    max-height 100%
    padding 0
    header
      padding 15px
      padding-bottom 0
      align-items center
      display flex
      flex-direction row
      div
        flex-grow 1
  .expansion-panel
    margin-top 1em
    margin-bottom 0.5em
    .sub-panel-header
      background-color #EBF1F5
      padding 5px
      border-radius 5px 0 0 5px
    .expansion-panel-header
      background-color #CED9E0
      padding 10px
      margin-bottom 0.2em
      // margin 0.2em -10px 0.2em -10px
      // border-bottom: 1px solid #ccc
      // border-top: 1px solid #ccc

.overflow-container
  overflow-y scroll
  max-height 70vh


.expansion-children
  margin-left 10px

