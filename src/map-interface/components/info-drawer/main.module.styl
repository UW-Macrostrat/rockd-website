@require "../../../styles/_common"

.macrostrat-detail
  display: flex;
  align-items: center;
  margin 0.2em 0 0.4em;
  .expansion-summary-title
    margin-right: 0.8em;
    &:after
      content: ":";

.described-age, .macrostrat-detail
  display: flex;
  align-items: center;
  .expansion-summary-title
    margin-right: 0.8em;
    &:after
      content: ":";

  .description
    font-style italic
    font-size 0.7em
    max-width: 100px
    text-align: right

  .age-chips
    flex-grow 1

.infodrawer
  pointer-events all
  max-height 100%
  max-width 100%
  height fit-content
  display flex
  flex-direction column
  padding 0
  overflow hidden


  .infodrawer-header-item
    margin-left: 0.5em
    .secondary
      font-size: 0.9em
      color: var(--text-subtle-color)

  &.loading
    .infodrawer-body
      overflow-y: hidden
      min-height: 70px

  // &.loading
  //   max-height: 200px
  // max-height: calc(100vh - 60px)
  // transition: max-height 0.5s ease-in-out 0.25s

.location-panel-header
  padding 5px
  display flex
  flex-direction row
  align-items: center
  gap: 0.5em;
  border-bottom: 1px solid var(--panel-rule-color)
  .spacer
    flex-grow 1
  .left-icon
    padding 7px

  .position-controls :global(.bp4-button)
    font-size: 12px


  .copy-link-button:global(.bp4-minimal.bp4-button)
    color: var(--text-subtle-color)
    svg
      fill: var(--text-subtle-color)

.infodrawer-body
  flex-shrink 1
  min-height: 0
  transition min-height 0.5s ease
  overflow-y scroll
  position relative

.spacer
  flex-grow 1
  pointer-events none

.macrostrat-unit
  h3
    margin: 0.5em 0 0.5em;
    flex-grow: 1;
  .description
    margin-right: 1em

.description
  font-style italic

.age-refinement-plot
  position relative
  .age-refinement-bar
    border-radius: 3px
    margin-bottom: 1px

.recenter-button
  :global(.bp4-icon):first-child
    margin-left: -3px
    margin-right: 0px

.recenter-label
  display: inline-block;
  padding-left: 1em;

@media screen and (max-width: 768px)
  .infodrawer
    border-radius: 0px;
