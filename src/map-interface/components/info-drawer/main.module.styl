@require "../../../styles/_common"

.macrostrat-detail
  display: flex;
  align-items: center;
  margin 0.2em 0 0.4em;
  .expansion-summary-title
    margin-right: 0.8em;
    &:after
      content: ":";

.described-age, .macrostrat-detail
  display: flex;
  align-items: center;
  .expansion-summary-title
    margin-right: 0.8em;
    &:after
      content: ":";

  .description
    font-style italic
    font-size 0.7em
    max-width: 100px
    text-align: right

  .age-chips
    flex-grow 1

.infodrawer
  pointer-events all
  max-height 100%
  max-width 100%
  height fit-content
  display flex
  flex-direction column
  padding 0
  overflow hidden
  header
    padding 5px
    display flex
    flex-direction row
    align-items: center
    .spacer
      flex-grow 1
    .left-icon
      padding 7px

  .infodrawer-header
    display flex
    flex-direction row
    align-items baseline
    margin-right 1em

  .secondary
    color: var(--text-subtle-color)

  &.loading
    .infodrawer-body
      overflow-y: hidden
      min-height: 70px

  // &.loading
  //   max-height: 200px
  // max-height: calc(100vh - 60px)
  // transition: max-height 0.5s ease-in-out 0.25s

.infodrawer-body
  overflow-y scroll
  flex-shrink 1
  position relative
  min-height: 0
  transition min-height 0.5s ease

.spacer
  flex-grow 1
  pointer-events none

.macrostrat-unit
  h3
    margin: 0.5em 0 0.5em;
    flex-grow: 1;
  .description
    margin-right: 1em

.description
  font-style italic

.age-refinement-plot
  position relative
  .age-refinement-bar
    border-radius: 3px
    margin-bottom: 1px

@media screen and (max-width: 768px)
  .infodrawer
    border-radius: 0px;
