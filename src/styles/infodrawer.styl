.infodrawer-container
  width 30em
  position absolute
  right 0px
  top 20px
  height 88vh
  pointer-events none
  /* This doesn't quite work when
     the page is too tall */
  .infodrawer
    pointer-events all
    overflow-y scroll
    max-height 100%
    padding 15px
    header
      align-items center
      display flex
      flex-direction row
      div
        flex-grow 1
  .expansion-panel
    margin-top 1em
    margin-bottom 0.5em
    .expansion-panel-header
      background-color #eee
      border-radius 5px
      padding 5px
      margin-bottom 0.2em
      // margin 0.2em -10px 0.2em -10px
      // border-bottom: 1px solid #ccc
      // border-top: 1px solid #ccc

.expansion-children
  margin-left 10px
