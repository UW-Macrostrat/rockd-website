
.searchbar-holder
  .navbar-holder
    display: flex
    flex-direction: row
    .spacer
      flex-grow 1
  transition margin 300ms
  display flex
  flex-direction column
  margin 0
  .searchbar
    width: 100%
    background-color #fff
    border-radius 3px
    margin-bottom 0.5em
    padding 0 5px
    display flex
    flex-direction: row
    align-items center
    .bp3-input-group
      flex-grow 1
    &>*
      margin-right 5px
      &:last-child
        margin-right 0
    
  .search-results-container
    flex-shrink 1
    .bp3-card
      overflow-y scroll
    ul
      padding-left 0
      list-style-type none
  .search-guidance
    ul
      li
        position relative
        padding-left 1.2em
        &:before
          content: 'â€“'
          position: absolute
          left: 0

.search-results
  max-height 70vh
  max-width 310px
  overflow auto
  padding: 0;
  li
    .text
      padding-left 15px
    padding: 0.2em 0 0.2em 20px
    cursor pointer
    &:first-child
      border-bottom 1px solid #ddd
    border-bottom 1px solid #ddd
    &:hover
      background-color: #eee
  ul
    list-style none
    margin: 0 
    margin-left: -60px
    margin-right: -40px

.menu-content
  display flex
  flex-direction column
  margin 0 -10px
  .bp3-button-group
    margin-bottom 1em
    button
      margin-bottom 2px
  margin-bottom -1em

// Should be maybe moved to a card-specific location
.card-header-left button
  margin-right 5px

.card-content
  h2:first-child
    margin-top 0
  overflow-y scroll

.filter-names {
  margin-top: 6px;
  margin-bottom: 2px;
}

.filter-name-container{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-tongue{
  background-color: #def1fff2;
  padding: 5px;
  padding-bottom: 7px;
  margin: 5px;
  max-width: 300px;
  margin-bottom: 7px;
  margin-top: -9px;
}


@media only screen and (max-width: 768px) {
  /* For mobile phones: */
  .navbar-holder{
    width: 100vw;
    left:0;
  }
  .searchbar{
    margin-bottom: 0;
  }
  .search-results{
    max-height: 93vh;
    width: 100vw;
    max-width:100vw;
  }

}