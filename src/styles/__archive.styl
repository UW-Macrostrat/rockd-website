.panels-overlay
  position absolute
  top 20px
  left 20px
  right 20px
  bottom 30px
  z-index 100
  // Make sure we can still click
  // on map in background
  pointer-events none
  &.searching
    pointer-events: all

.left-stack
  // height 100vh
  position absolute
  top 0
  bottom 0
  display: flex
  flex-direction: row
  .spacer
    width 1px
  .panel-container > *
    transition width 300ms