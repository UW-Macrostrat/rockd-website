{
  "compilerOptions": {
    "baseUrl": "./",
    // Allow importing of JSON and default imports from CommonJS modules
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "#/*": [
        "pages/*"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "src/**/*",
    "pages/**/*"
  ]
}
