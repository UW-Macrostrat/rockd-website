.footer 
  display grid
  grid-template-columns 50% 50%
  background-color white
  text-align center
  color #363434
  padding 25px 0
  height 25vh

  ul 
    list-style-type: none

  a 
    color black
    font-weight bold
  a:hover
    color black

.footer-text
  color #363434
  font-size 24px
  font-weight 500

.footer-links
  display grid
  margin auto

.titles
  text-align left
  margin-left 30%

.row
  width 100%

.checkin-info
  display grid
  margin auto
  margin-left 0
  text-align left

.checkin
  color black
  text-align left
  box-shadow -4px 0px 7px #aaa
  padding 15px
  padding-bottom 6px
  border-radius 2%
  font-size 14px
  color #666
  margin-top 10px

  h3
    color black

  a 
    color: black
    text-decoration none

  a:hover
    color: black

h3,h4,p
  margin 0

.checkin-link
  position relative

  .image-details
    position: absolute;
    top: -250px;
    left: 0;
    right: 0;
    bottom: 0
    display: flex;
    justify-content: center
    align-items: center
    display none
    color white

  .observation-img
    margin-top 10px
    width 100%
    height 250px
    object-fit cover
    border-radius 2%

.checkin-link:hover 
  .observation-img 
    -webkit-filter: brightness(70%)
  .image-details 
    display: flex

.details-image
  width 40px
  margin-left 10px
  margin-top 4px

.checkin-footer
  display flex
  justify-content center

  .likes-container
    display grid
    grid-template-columns 50% 50%
    width 25%
    justify-content end
    place-items center


    .likes-image
      width 40px

  .comments-container
    display grid
    grid-template-columns 50% 50%
    width 25%
    place-items center

    .comments-image
      width 40px

  .observations-container
    display grid
    grid-template-columns 50% 50%
    width 25%
    place-items center

    .observations-image
      width 40px
      
.marker
  height 7vh
  display grid
  margin auto
  margin-right 0

.details-image
  width 40px
  margin-left 10px
  margin-top 4px

.checkin-info
  display grid
  margin auto
  margin-left 0

.checkin-header
  display flex

.profile-pic
  height 80px
  width 80px
  border-radius 50%
  display inline-block
  margin-right 10px

.description
  margin-top 10px

.marker_container 
  position relative
  height 7vh
  margin-right 10px

  .marker-number
    position absolute
    font-weight bold
    font-size 16px
    transform translate(-50%, -50%)
    top 40%
    left 48%
    color white

  .circle-number
    position absolute
    font-weight bold
    font-size 16px
    transform translate(-50%, -50%)
    top 50%
    left 50%
    color white

.stop-name
  margin 0
  color black
  font-size 30px
  margin-bottom 10px