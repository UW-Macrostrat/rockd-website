.main
    background-color white
    color black
    padding 0
    margin 0
    padding-left 20%
    height 75vh

h1, p
    padding 0
    margin 0

.location-img
    position absolute
    z-index 1
    width 60%
    height 25vh
    object-fit cover

.stop-header
  display grid
  margin auto
  grid-template-columns 20% 80%
  position absolute
  z-index 2
  background-color rgba(255, 255, 255, 0.8)
  width 60%
  height 25vh
  align-items center

  h3 
    font-size 20px
    padding 0
    margin 2px


.profile-pic
  height 100px
  border-radius 50%
  display grid
  margin auto

.stop-main-info
  text-align left
  display grid
  margin auto
  margin-left 0

.star
    height 15px

.marker
    heigth 15px

.edited
    color grey

h4
    padding 0
    margin 0

.checkin-header
    padding 30px
    padding-left 0

