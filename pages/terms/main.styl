body
  font-family "Helvetica Neue","Segoe UI",sans-serif
  font-size 15px
  line-height 30px

.title
  text-align center
  font-size 35px
  font-weight 200
  margin-top 0
  padding-top 50px
  color white

.content
  padding 0 20%

.section
  margin-top 50px
  margin-bottom 50px
